                    .cards__item
                        .cards__calendar
                    .cards__item
                        +room({name: 'room1', number: '888', price: '10000', rating: 1, arrow: true})
                    .cards__item
                        +room({name: 'room2', number: '999', price: '9990', rating: 3, luxury: true, review: 5, images: ['350-l.png','350-l.png', '350-l.png', '350-l.png'], arrow: true})

