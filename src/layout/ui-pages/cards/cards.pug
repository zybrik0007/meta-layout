                .cards__column.cards__column_l
                    .cards__item
                        +card-search-room({
                            from: '12.10.2022',
                            to: '22.10.2022',
                            guests: {
                                adult: 0,
                                child: 0,
                                baby: 0
                            }
                        })
                    .cards__item
                        +card-account-registration({link: 'http://localhost:8080/test'})
                .cards__column.cards__column_l
                    .cards__item
                        +card-room({number: '888', luxury: true, price: '9990', from: '19.10.2022', to: '23.10.2022', service: '100', sup: '300', adult:3, child: 0, baby: 0})
